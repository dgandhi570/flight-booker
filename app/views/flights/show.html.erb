<br>
<h1> All Flights </h1>
<br>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">S.No</th>
      <th scope="col">Origin</th>
      <th scope="col">Destination</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
<tbody>
<%y=1%>
    <% @flights.each do |x|%>
    
    <tr>
      <th scope="row"><%=y%></th>
      <td><%=x.departure_airport.code%></td>
      <td><%=x.arrival_airport.code%></td>
      <td><%=x.date_time%></td>
    </tr>
    <%y += 1%>
    <%end%>
  </tbody>
</table>